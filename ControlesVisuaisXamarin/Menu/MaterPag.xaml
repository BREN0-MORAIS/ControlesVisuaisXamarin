<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:pag="clr-namespace:ControlesVisuaisXamarin"
             x:Class="ControlesVisuaisXamarin.Menu.MaterPag">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu" BackgroundColor="Blue">
            <StackLayout>
                <Button Text="Activity Indicator" Clicked="GoActivit"/>
                <Button Text="ProgressBar" Clicked="GoProgressBarPage"/>
                <Button Text="BoxView" Clicked="GoBoxViewPage"/>
                <Button Text="Label" Clicked="GoLabel"/>
                <Button Text="Botão" Clicked="GoButton"/>
                <Button Text="Entry e Editor" Clicked="GoEntryEditorPage"/>
                <Button Text="Data Picker" Clicked="GoDataPickerPage"/>
                <Button Text="Time Picker" Clicked="GoTimerPickerPage"/>
                <Button Text="Picker" Clicked="GoPickerPage"/>
                <Button Text="SearchBar" Clicked="GoSerchBarPage"/>
            </StackLayout>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <pag:MainPage/>
    </MasterDetailPage.Detail>
   
</MasterDetailPage>