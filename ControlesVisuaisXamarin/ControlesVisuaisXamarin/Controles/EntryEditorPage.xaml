<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlesVisuaisXamarin.Controles.EntryEditorPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry 
                TextColor="Black"
                x:Name="TxtIdade"
                Text="Texto"
                Placeholder="New Texto"
                PlaceholderColor="Red"
                IsPassword="false"
                
                Keyboard="Numeric"
                
                
                BackgroundColor="AliceBlue"
                
                
                
                />
            <Label x:Name="Lbl_Duplicado" TextColor="White"/>
            <Editor  TextColor="Black"
                x:Name="TxtComentario"
                HeightRequest="200"
                />

            <Label x:Name="LblQuantidadeCaracteres"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>